<!-- 1、小程序的数据绑定,不支持dom操作, 用{{}}语法  Mustache-->
<!-- 把js文件里的数据抽出来作为变量渲染上去 -->
<view>hello {{name}}</view>
<view>我的年龄：{{age}}</view>
<view>是李三岁呀~</view>
<!-- 2、列表渲染  wx:for -->
<view wx:for="{{students}}" >{{item.name}}-{{item.age}}</view>
<!-- 3、事件监听改变data数据 -->
<view>当前计数：{{counter}}</view>
<!-- bindtap 点击轻触方法 绑定数据才需要mustache语法-->
<button size="mini" bindtap="handleBtnClick">counter++</button>